{% block body %}
    <div class="row">
        {% if subscription.id is null %}
            <h1>{{ "mail.unsubscription.title"|trans }}</h1>
        {% else %}
            <h1>{{ "mail.subscription.title"|trans }}</h1>
        {% endif %}
    </div>
    <div class="row">
        <h3>
            L'utilisateur
            <a href="{{ path("user_by_pseudo", {"pseudo": subscription.participant.username }) }}">{{ subscription.participant.username }}</a>
            s'est
            {% if subscription.id is null %}
                désinscrit
            {% else %}
                inscrit
            {% endif %}
            à votre événement <a href="{{ path("event_detail", {"id": event.id}) }}">{{ event.name }}</a>
        </h3>
    </div>
    <div class="row">
        <a href="{{ path("event_detail", {"id": event.id}) }}" class="btn btn-primary">Allez consulter</a>
    </div>
{% endblock %}