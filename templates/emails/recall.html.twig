{% block body %}
    <div class="row">
        <h1>{{ "mail.recall.title"|trans }}</h1>
    </div>
    <div class="row">
        <h3>
            L'événement <a href="{{ path("event_detail", {"id": event.id}) }}">{{ event.name }}</a>, organisé par
            <a href="{{ path("user_by_pseudo", {"pseudo": event.organisator.username}) }}">{{ event.organisator.username }}</a>,
            aura lieu demain, à {{ event.lieu.name }}, {{ event.lieu.street }} {{ event.lieu.city.postalCode }} {{ event.lieu.city.name }}
        </h3>
    </div>
    <div class="row">
        <a href="{{ path("event_detail", {"id": event.id}) }}" class="btn btn-primary">Consultez l'événement</a>
    </div>
{% endblock %}