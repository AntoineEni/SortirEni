{%  extends('base.html.twig') %}

{% block title %}{{ "user.profile.title"|trans }} {{ parent() }}{% endblock %}

{% block body %}
    <div class="text-center">
        <h1 class="title">{{ user.username }}</h1>
        <div class="bg-detail text-left">
        <div class="row">
            <div class="col-md">
                    <span class="font-weight-bold">{{ "user.profile.name"|trans }}</span>
                    <p>{{ user.name }}</p>
                    <span class="font-weight-bold">{{ "user.profile.firstname"|trans }}</span>
                    <p>{{ user.firstName }}</p>
                    <span class="font-weight-bold">{{ "user.profile.phone"|trans }}</span>
                    <p>{{ user.phone }}</p>
                    <span class="font-weight-bold">{{ "user.profile.mail"|trans }}</span>
                    <p>{{ user.mail }}</p>
                {% if(app.user.username == user.username) %}
                    <a class="btn bgBleu text-light p-0 mb-3" href="{{ path("user_modify") }}">{{ "user.profile.confirm"|trans }}</a>
                {% endif %}
                </div>
            <div class="col-md">
                <i class="far fa-user font-user" ></i>
            </div>
            </div>
        </div>
    </div>
{% endblock %}
